{
  "name": "pluto-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "apollo-server": "^3.5.0",
    "class-validator": "^0.13.2",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.13.6",
    "prisma": "^3.5.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "1.2.0-rc.1",
    "typegraphql-prisma": "^0.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@types/graphql-fields": "^1.3.4",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "apollo-server-types": "^3.4.0",
    "dotenv": "^10.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build": "tsc -p .",
    "eslint:fix": "eslint ./src --ext .js,.ts --fix",
    "prettify": "prettier --write src/**/*.{js,json,ts} && prettier --write *.{js,json,ts}",
    "prisma:generate": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "prisma:init": "npx prisma init",
    "start:development:linux": "NODE_ENV=development ts-node ./src/app.ts",
    "start:development:windows": "SET NODE_ENV=development && ts-node ./src/app.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint:fix",
      "yarn prettify",
      "git add ."
    ],
    "*.ts": [
      "yarn eslint:fix",
      "yarn prettify",
      "git add ."
    ]
  }
}
